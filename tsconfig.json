{
  "compilerOptions": {
    "module": "es6",
    "lib": ["ESNext", "DOM.Iterable", "DOM"],
    "esModuleInterop": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "assets/js",
    "baseUrl": "static/scripts",
    "paths": {
      "*": [
        "node_modules/*",
        "assets/types/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }   
}